<!DOCTYPE html>
<html>
<head>
	<title>Brij's online store | <%= yield(:title) %></title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>

<body>
	<%= render :partial => "layouts/header" %>

	<div class="container">
		<%= render :partial => "layouts/flash_section" %>

		<div class="row">
			<%= yield %>
		</div>
		
		<%= render "layouts/footer" %>

      	<% if Rails.env.development? %>
      	<%= debug(params) %>
      	<%= debug(session) %>
      	<%= debug(cookies) %>
      	<% end %>
	</div>



</body>
</html>
