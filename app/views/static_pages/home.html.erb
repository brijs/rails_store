<% provide(:title, 'Home') %>
<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>

	</aside>
	<div class="span8">
		<h3>Micropost Feed</h3>
		<%= render 'shared/feed' %>
	</div>
</div>  
<% else %>
	<div class="hero-unit center">
		<h1>Welcome to Brij's online store</h1>

		<h2>
			This is the home page for <%= link_to "Brij's online store", static_pages_home_path %>
		</h2>

		<%= link_to "Sign up now!", signup_path, 
		class: "btn btn-large btn-primary" %>
	</div>


<div class = "row center">

	<div id="myCarousel" class="carousel offset2 span8">
		<!-- Carousel items -->
		<div class="carousel-inner">
			<div class="active item">
				<img src="assets/image1.jpg"></img>
				<div class="carousel-caption">
					<h4>First thumbnail Label</h4>
					<p>First image description....</p>
				</div>
			</div>
			<div class="item">
				<img src="assets/image2.jpg"></img>
				<div class="carousel-caption">
					<h4>Second thumbnail Label</h4>
					<p>Seoncd image description....</p>
				</div>
			</div>
			<div class="item">
				<img src="assets/image3.jpg"></img>
				<div class="carousel-caption">
					<h4>Third thumbnail Label</h4>
					<p>Third image description....</p>
				</div>
			</div>
		</div>
		<!-- Carousel nav -->
		<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
		<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
	</div>
	
</div>


<% end %> 
